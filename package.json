{
  "name": "react-quickstart",
  "version": "1.0.0",
  "description": "Boilerplate for creating a great react app",
  "author": "Blake Zimmerman <blake.zimmerman@me.com>",
  "license": "ISC",
  "main": "src/server/app.ts",
  "scripts": {
    "start": "nodemon --watch 'src/server/**/*.ts' --exec 'ts-node' src/server/app.ts",
    "start-prod": "node ./dist/server/server.bundle.js",
    "build-server": "webpack --config webpack/webpack.server.js --bail",
    "build-client": "webpack --config webpack/webpack.prod.js --bail",
    "build-all": "npm run clean && npm run build-server && npm run build-client",
    "clean": "rimraf dist",
    "lint": "tslint \"src/**/*.ts*\""
  },
  "dependencies": {
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "handlebars": "^4.0.11",
    "webpack": "^4.4.1",
    "webpack-dev-middleware": "^3.1.0",
    "webpack-hot-middleware": "^2.21.2"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/express-handlebars": "0.0.30",
    "@types/handlebars": "^4.0.36",
    "@types/node": "^9.6.1",
    "@types/react": "^16.3.1",
    "@types/react-dom": "^16.0.4",
    "@types/webpack": "^4.1.3",
    "@types/webpack-dev-middleware": "^2.0.1",
    "@types/webpack-env": "^1.13.5",
    "@types/webpack-hot-middleware": "^2.16.3",
    "compression-webpack-plugin": "^1.1.11",
    "copy-node-modules": "^1.0.4",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.1.0",
    "nodemon": "^1.17.3",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "rimraf": "^2.6.2",
    "styled-components": "^3.2.5",
    "ts-loader": "^4.1.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1",
    "webpack-cli": "^2.0.13",
    "webpack-merge": "^4.1.2"
  }
}
