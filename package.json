{
  "name": "react-quickstart",
  "version": "1.0.0",
  "description": "Boilerplate for creating a great react app",
  "author": "Blake Zimmerman <blake.zimmerman@me.com>",
  "license": "ISC",
  "main": "src/server/app.ts",
  "scripts": {
    "start": "nodemon --watch 'src/server/**/*.ts' --exec ts-node src/server/app.ts",
    "start-prod": "node ./dist/server/server.bundle.js",
    "build-server": "webpack --config webpack/webpack.server.js --bail",
    "build-client": "webpack --config webpack/webpack.prod.js --bail",
    "build-all": "npm run clean && npm run build-server && npm run build-client",
    "clean": "rimraf dist",
    "prettier": "prettier --write \"src/**/*.ts*\"",
    "lint": "npm run prettier && tslint \"src/**/*.ts*\""
  },
  "dependencies": {
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "handlebars": "^4.0.11",
    "webpack": "^4.16.5",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/express-handlebars": "0.0.30",
    "@types/handlebars": "^4.0.39",
    "@types/node": "^10.5.8",
    "@types/react": "^16.4.9",
    "@types/react-dom": "^16.0.7",
    "@types/webpack": "^4.4.9",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-env": "^1.13.6",
    "@types/webpack-hot-middleware": "^2.16.4",
    "compression-webpack-plugin": "^1.1.11",
    "copy-node-modules": "^1.0.6",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "rimraf": "^2.6.2",
    "styled-components": "^3.4.2",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.4"
  }
}
